{
  "name": "boba-ordering-system",
  "version": "2.2.0",
  "description": "奶茶在线点单系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/dist/output.css",
    "build:css:watch": "tailwindcss -i ./src/input.css -o ./public/dist/output.css --watch",
    "build:css:prod": "tailwindcss -i ./src/input.css -o ./public/dist/output.css --minify",
    "test": "jest --coverage --json --outputFile=reports/test-results.json && node scripts/generate-test-report.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --json --outputFile=reports/test-results.json && node scripts/generate-test-report.js",
    "test:unit": "jest --testPathPattern=tests/(middleware|utils|db)",
    "test:integration": "jest --testPathPattern=tests/routes",
    "test:integration-only": "jest --testPathPattern=tests/routes --testNamePattern='Integration|Edge Cases' --verbose",
    "test:frontend": "jest --config jest.config.frontend.js",
    "test:all": "npm run test && npm run test:frontend",
    "test:full": "npm run test:coverage && npm run test:frontend",
    "test:report": "npm run test:coverage && echo 'Test report generated at reports/test-report.html'",
    "backup": "node scripts/backup.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "boba",
    "ordering",
    "system"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@andresaya/edge-tts": "^1.8.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.6",
    "stripe": "^14.0.0",
    "twilio": "^5.10.5",
    "uuid": "^9.0.0",
    "vanilla-jsoneditor": "^3.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^23.2.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.18"
  }
}
