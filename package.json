{
  "name": "boba-ordering-system",
  "version": "1.0.0",
  "description": "奶茶在线点单系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/(middleware|utils|db)",
    "test:integration": "jest --testPathPattern=tests/routes",
    "test:integration-only": "jest --testPathPattern=tests/routes --testNamePattern='Integration|Edge Cases' --verbose",
    "test:frontend": "jest --config jest.config.frontend.js",
    "test:all": "npm run test && npm run test:frontend",
    "test:full": "npm run test:coverage && npm run test:frontend",
    "test:report": "npm run test:full > test-results.txt 2>&1 && echo 'Test results saved to test-results.txt'",
    "backup": "node scripts/backup.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "boba",
    "ordering",
    "system"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.6",
    "twilio": "^5.10.5",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^23.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  }
}
