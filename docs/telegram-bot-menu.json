{
  "version": 2,
  "note": "UI draft only. Not wired to bot yet.",
  "authorization": {
    "group_wide": true,
    "authorized_group_ids": [
      "-1001234567890"
    ],
    "authorized_user_ids": [],
    "unauthorized_reply": {
      "en": "This group is not authorized. Please contact admin.",
      "zh": "当前群组未授权，请联系管理员。"
    }
  },
  "welcome": {
    "title": {
      "en": "Welcome to BOBA TEA Admin Bot",
      "zh": "欢迎使用 BOBA TEA 管理 Bot"
    },
    "message": {
      "en": "Choose a section below to explore admin menus.",
      "zh": "请选择下方分类进入管理菜单。"
    },
    "intro": {
      "en": "All-in-one admin console for orders, catalog, users, alerts, and system settings.",
      "zh": "一站式管理控制台，覆盖点单、商品、用户、告警与系统配置。"
    }
  },
  "commands": [
    {
      "command": "/start",
      "description": {
        "en": "Welcome and show main menu",
        "zh": "欢迎并展示主菜单"
      }
    },
    {
      "command": "/menu",
      "description": {
        "en": "Show menu buttons",
        "zh": "展示菜单按钮"
      }
    },
    {
      "command": "/alerts",
      "description": {
        "en": "Show latest alerts summary",
        "zh": "查看最新告警摘要"
      }
    },
    {
      "command": "/status",
      "description": {
        "en": "Show system status",
        "zh": "查看系统状态"
      }
    },
    {
      "command": "/recent_orders",
      "description": {
        "en": "Show recent orders",
        "zh": "查看最近订单"
      }
    },
    {
      "command": "/recent_users",
      "description": {
        "en": "Show recent users",
        "zh": "查看最近用户"
      }
    },
    {
      "command": "/help",
      "description": {
        "en": "Show help and contact info",
        "zh": "查看帮助与联系方式"
      }
    }
  ],
  "display_order": {
    "primary": "manual_order",
    "secondary": "menu_level",
    "tertiary": "localized_label",
    "fallback": "created_at"
  },
